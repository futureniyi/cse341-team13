    "/loans/": {
      "get": {
        "tags": ["Loans"],
        "summary": "Get all loans",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": { "type": "string", "example": "69811ad214bfb769a47ae66a" },
                  "studentId": { "type": "string", "example": "66c4a7c6f1c2a3b4c5d6e7f8" },
